<gmd:CI_ResponsibleParty xmlns:gmd="http://www.isotc211.org/2005/gmd"
                         xmlns:gco="http://www.isotc211.org/2005/gco"
                         uuid="inpn-contacts-ref-{{ poc['organizationCode'] }}">
  <gmd:individualName>
      <gco:CharacterString></gco:CharacterString>
   </gmd:individualName>
  <gmd:organisationName>
      <gco:CharacterString>{{ poc['enrichedLabel'] or poc['longName']|capitalize}}</gco:CharacterString>
   </gmd:organisationName>
  <gmd:positionName>
      <gco:CharacterString></gco:CharacterString>
   </gmd:positionName>
  <gmd:contactInfo>
      <gmd:CI_Contact>
         <gmd:phone>
            <gmd:CI_Telephone>
               <gmd:voice>
                  <gco:CharacterString>{{ poc['phone'] or ''}}</gco:CharacterString>
               </gmd:voice>
               <gmd:facsimile>
                  <gco:CharacterString></gco:CharacterString>
               </gmd:facsimile>
            </gmd:CI_Telephone>
         </gmd:phone>
         <gmd:address>
            <gmd:CI_Address>
               <gmd:deliveryPoint>
                  <gco:CharacterString>{{ poc['address']|capitalize or ''  }}</gco:CharacterString>
               </gmd:deliveryPoint>
               <gmd:city>
                  <gco:CharacterString>{{ poc['city']|capitalize or '' }}</gco:CharacterString>
               </gmd:city>
               <gmd:administrativeArea>
                  <gco:CharacterString/>
               </gmd:administrativeArea>
               <gmd:postalCode>
                  <gco:CharacterString>{{ poc['postcode'] or '' }}</gco:CharacterString>
               </gmd:postalCode>
               <gmd:country>
                  <gco:CharacterString>{{ poc['country']|capitalize or '' }}</gco:CharacterString>
               </gmd:country>
               <gmd:electronicMailAddress>
                  <gco:CharacterString>{{ poc['email'] or '' }}</gco:CharacterString>
               </gmd:electronicMailAddress>
            </gmd:CI_Address>
         </gmd:address>
         <gmd:onlineResource>
            <gmd:CI_OnlineResource>
               <gmd:linkage>
                 <gmd:URL>{{ poc['url'] or '' }}</gmd:URL>
               </gmd:linkage>
               <gmd:protocol>
                  <gco:CharacterString>WWW:LINK-1.0-http--link</gco:CharacterString>
               </gmd:protocol>
               <gmd:name>
                  <gco:CharacterString/>
               </gmd:name>
               <gmd:description>
                  <gco:CharacterString/>
               </gmd:description>
            </gmd:CI_OnlineResource>
         </gmd:onlineResource>
      </gmd:CI_Contact>
  </gmd:contactInfo>
  <gmd:role>
      <gmd:CI_RoleCode codeList="./resources/codeList.xml#CI_RoleCode" codeListValue="pointOfContact"/>
  </gmd:role>
</gmd:CI_ResponsibleParty>